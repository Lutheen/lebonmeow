<header>
    <div class="mxw-1066px m-0auto ps-1em df jcsb aic fww">

        <div class="df aic jcs f11auto g102em fw-600">
            <a href="/">
                <img src="/images/logo-pressed.png" alt="Logo du site Lebonmeow" class="logo">
            </a>
            <a href={{ path('app_product_new') }} class="df aic button button-full ptb-05em-lr-06em">
                <i class="fa-regular fa-square-plus fa-xl mr-05em"></i>
                <span class="pb-02em">Déposer une annonce</span>
            </a>
            <a href="/" class="df aic jcc ass fdr g06em ptb-102em-lr-05em border-bottom-change-purple">
                <i class="fa-solid fa-magnifying-glass fa-2xl"></i>
                Rechercher
            </a>
        </div>
        
        <div class="df aic jce f11auto ass fs-12">
            <a href="/" class="df aic fdc ass jcc g04em p-05em border-bottom-change-purple">
                <img src="/images/bell.svg" alt="Icône d'une cloche" class="h24-w24">
                <span>Mes recherches</span>
            </a>
            <a href="/" class="df aic fdc ass jcc g04em p-05em border-bottom-change-purple">
                <img src="/images/heart.svg" alt="Icône d'un coeur" class="h24-w24">
                <span>Favoris</span>
            </a>
            <a href="/" class="df aic fdc ass jcc g04em p-05em border-bottom-change-purple">
                <img src="/images/messages.svg" alt="Icône d'une bulle avec trois points" class="h24-w24">
                <span>Messages</span>
            </a>
            {% if app.user %}
                <a href="/account" class="df aic fdc ass jcc g02em pt-02em-05em border-bottom-change-purple">
                    {% if app.user.image %}
                        <img src={{ asset(app.user.image) }} alt="Avatar de {{ app.user.username }}" class="h30-w30 round-picture cover-center-object">
                    {% else %}
                        <img src="/images/avatar.png" alt="Icône d'un utilisateur connecté" class="h30-w30 round-picture cover-center-object">
                    {% endif %}
                    <span>{{ app.user.username }}</span>
                </a>
            {% else %}
                <a href="/login" class="df aic fdc ass jcc g04em p-05em border-bottom-change-purple">
                    <img src="/images/an-user.svg" alt="Icône d'un utilisateur non connecté" class="h24-w24">
                    <span>Se connecter</span>
                </a>
            {% endif %}
        </div>

        <nav class="f11auto pt-1em">
            <ul class="ass df aic h-100">
                {% for category in categories %}
                    <li class="asc ps-1em-b-101em border-bottom-change-black rm-p"><a href={{ path('app_category_show', {id: category.id}) }}>{{ category.name | capitalize }}</a></li>
                    <span class="dot"></span>
                {% endfor %}
            </ul>
        </nav>

    </div>
</header>