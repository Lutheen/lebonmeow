{% extends 'base.html.twig' %}

{% block body %}

<div class="container-profile">
    <div class="profile-cards public-profile-card">
        <div class="profile-user">
            <div class="profile-picture">
                <a href="/">{# todo modal vers ajout avatar #}
                    <img src="/images/avatar.png" alt="Avatar par défaut">
                    <div class="profile-picture-add"><i class="fa-solid fa-plus fa-lg"></i></div>
                </a>
            </div>
            <h1>{{ app.user.username }}</h1>
        </div>
        <a href="{{ path('app_profile') }}" class="profile-user-button">Voir mon profil public</a>
    </div>
    <div class="wallet-card">
        <a href="/">{# todo route porte-monnaie #}
            <div class="profile-cards wallet-card-bg">
                <div class="wallet-card-content">
                    <h2 class="profile-cards-titles">Porte-monnaie</h2>
                    <span class="wallet-balance">0 €</span>
                    <span>Solde disponible</span>
                </div>
            </div>
        </a>
    </div>
    <div class="products-card">
        <a href="/">{# todo route products #}
            <div class="profile-cards secondary-cards">
                <div class="profile-cards-icons">
                    <span class="fa-stack fa-1x">
                        <i class="fa-solid fa-square fa-stack-2x"></i>
                        <i class="fa-solid fa-bars-staggered fa-stack-1x fa-inverse"></i>
                    </span>
                </div>
                <div class="profile-cards-text-content">
                    <h2 class="profile-cards-titles">Annonces</h2>
                    <span class="profile-cards-description">Gérer mes annonces déposées</span>
                </div>
            </div>
        </a>
    </div>
    <div class="deals-card">
        <a href="/">{# todo route deals #}
            <div class="profile-cards secondary-cards">
                <div class="profile-cards-icons">
                    <span class="fa-stack fa-1x">
                        <i class="fa-solid fa-circle fa-stack-2x"></i>
                        <i class="fa-solid fa-euro-sign fa-stack-1x fa-inverse"></i>
                    </span>
                </div>
                <div class="profile-cards-text-content">
                    <h2 class="profile-cards-titles">Transactions</h2>
                    <span class="profile-cards-description">Suivre mes achats et mes ventes</span>
                </div>
            </div>
        </a>
    </div>
    <div class="bookings-card">
        <a href="/">{# todo route bookings #}
            <div class="profile-cards secondary-cards">
                <div class="profile-cards-icons">
                    <i class="fa-solid fa-umbrella-beach fa-2xl"></i>
                </div>
                <div class="profile-cards-text-content">
                    <h2 class="profile-cards-titles">Réservations de vacances</h2>
                    <span class="profile-cards-description">Retrouver vos réservations en tant qu'hôte et voyageur</span>
                </div>
            </div>
        </a>
    </div>
    <div class="spaces-card">
        <a href="/">{# todo route spaces #}
            <div class="profile-cards secondary-cards">
                <div class="profile-cards-icons">
                    <i class="fa-solid fa-circle-user fa-2xl"></i>
                </div>
                <div class="profile-cards-text-content">
                    <h2 class="profile-cards-titles">Profil & Espaces</h2>
                    <span class="profile-cards-description">Modifier mon espace public, accéder à mes avis, aux espaces candidat et locataire</span>
                </div>
            </div>
        </a>
    </div>
    <div class="settings-card">
        <a href="/">{# todo route settings #}
            <div class="profile-cards secondary-cards">
                <div class="profile-cards-icons">
                    <i class="fa-solid fa-gear fa-2xl"></i>
                </div>
                <div class="profile-cards-text-content">
                    <h2 class="profile-cards-titles">Paramètres</h2>
                    <span class="profile-cards-description">Compléter et modifier mes informations privées et préférences</span>
                </div>
            </div>
        </a>
    </div>
    <div class="security-card">
        <a href="/">{# todo route security #}
            <div class="profile-cards secondary-cards">
                <div class="profile-cards-icons">
                    <span class="fa-stack fa-1x">
                        <i class="fa-solid fa-shield fa-stack-2x"></i>
                        <i class="fa-solid fa-check fa-inverse fa-stack-1x"></i>
                    </span>
                </div>
                <div class="profile-cards-text-content">
                    <h2 class="profile-cards-titles">Connexion et sécurité</h2>
                    <span class="profile-cards-description">Protéger mon compte et mettre à jour mon mot de passe</span>
                </div>
            </div>
        </a>
    </div>
    <div class="credits-card">
        <a href="/">{# todo route credits #}
            <div class="profile-cards secondary-cards tertiary-cards">
                <div class="profile-cards-icons">
                    <i class="fa-solid fa-coins fa-xl"></i>
                </div>
                <div class="profile-cards-text-content">
                    <h2 class="profile-cards-titles">Mes crédits</h2>
                </div>
            </div>
        </a>
    </div>
    <div class="profile-cards assistance-card">
        Aide
    </div>
    <div class="profile-cards community-card">
        Communauté Lebonmeow
    </div>
    <div class="logout-card">
        <a href="/logout">Se déconnecter</a>
    </div>

    {# {% for message in app.flashes('address_message') %}
        <div>
            {{ message }}
        </div>
    {% endfor %} #}

