{% extends 'base.html.twig' %}

{% block title %}lebonmeow - connexion{% endblock %}

{% block header %}
{% include "partials/header_mini.html.twig" %}
<span class="header-mini-title">
    <i class="fa-solid fa-shield-cat fa-xl"></i>
    Connexion
</span>
</div>
</header>
{% endblock %}

{% block body %}
<main class="main-forgot">
    <div class="row-forgot">
        <div class="col-forgot">
            <div class="section-forgot-form">
                <div class="forgot-form-intro">
                    <h2>Mot de passe oublié</h2>
                    <span>Entrez l'adresse e-mail associée à votre compte</span>
                </div>
                {{ form_start(requestPwdForm) }}
                    <div class="card-form-email">
                        <label for="inputEmail" class="card-form-label">E-mail
                            <span class="card-form-required-field">champ requis</span>
                        </label>
                        <div class="card-form-input" id="inputEmail">
                            {{ form_widget(requestPwdForm.email) }}
                        </div>
                    </div>
                    <button type="submit" class="forgot-form-button">Continuer</button>
                {{ form_end(requestPwdForm) }}
            </div>
            <div class="section-forgot-image"></div>
        </div>
    </div>
</main>

{% endblock %}

{% block footer %}{% endblock %}