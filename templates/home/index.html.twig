{% extends 'base.html.twig' %}

{% block body %}
<main class="background-grey">
    <h1 class="main-title">Des millions de petites annonces et autant d'occasions de se faire plaisir</h1>
    <div class="products">
        {% for product in products %}
        <a href="{{ path('app_product_show', {'slug': product.slug}) }}">
            <div class="product-item">
                <div class="product-seller-details">
                    <div>
                        {% if product.seller.image is defined %}
                            <img src={{ product.seller.image }} alt="Image de profil de {{ product.seller.username }}" class="h24-w24 round-picture cover-center-object">
                        {% else %}
                            <img src="/images/avatar.png" alt="Image de profil de {{ product.seller.username }}" class="h24-w24 round-picture cover-center-object">
                        {% endif %}
                    </div>
                    <div class="product-seller-username">{{ product.seller.username }}</div>
                    <div class="product-seller-reviews">
                        <i class="fa-solid fa-star fa-sm"></i>
                        <span class="product-seller-reviews-number">3</span>
                    </div>
                </div>

                <div class="product-main">
                    <div>
                        <img src={{ product.firstImage }} alt="Image de l'annonce : {{ product.name }}" class="h180-w225 rounded-corner cover-center-object">
                    </div>
                    <h2 class="product-title">{{ product.name }}</h2>
                </div>

                <div class="product-price">{{ product.price }} â‚¬</div>
            </div>
        </a>
        {% endfor %}
    </div>
</main>
{% endblock %}
