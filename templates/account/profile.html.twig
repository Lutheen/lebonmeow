{% extends "base.html.twig" %}

{% block title %}Profil de {{ app.user.username }}{% endblock %}

{% block body %}

<div class="container">
    <div class="main">
        <div class="user-card">
            {{ app.user.username }}
            Membre depuis {{ app.user.createdAt }}
        </div>
        <div class="user-products-card">
            {{ app.user.products|length }} annonces
        </div>
    </div>
</div>

{% endblock %}